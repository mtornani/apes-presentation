    <div class="nav-hint">SCROLL TO NAVIGATE â†“</div>

    <script>
        // Hide nav hint after first scroll
        let hasScrolled = false;
        document.querySelector('.slides-container').addEventListener('scroll', () => {
            if (!hasScrolled) {
                hasScrolled = true;
                document.querySelector('.nav-hint').style.opacity = '0';
            }
        });

        // Add dynamic nodes to neural network
        const network = document.querySelector('.neural-network');
        if (network) {
            for (let i = 0; i < 20; i++) {
                const node = document.createElement('div');
                node.className = 'node';
                node.style.width = Math.random() * 5 + 5 + 'px';
                node.style.height = node.style.width;
                node.style.top = Math.random() * 100 + '%';
                node.style.left = Math.random() * 100 + '%';
                node.style.animationDelay = Math.random() * 6 + 's';
                node.style.opacity = Math.random() * 0.5 + 0.3;
                network.appendChild(node);
            }
        }
    </script>
